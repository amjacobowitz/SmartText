<h1>Teachers</h1>

<a href="/teachers/new">Make a new teacher</a>

<% for (var i=0; i<teachers.length; i++){ %>
	<br>
	first name: <a href="/teachers/<%= teachers[i]._id %>"><%= teachers[i].first_name %></a>
	<br>
	last name: <%= teachers[i].last_name %>
	<br>
	username: <%= teachers[i].username %>
	<br>
	klasses: <%= teachers[i].klasses %> 
	<br>
	lessons: <%= teachers[i].lessons %> 
	<form action="/teachers/<%= teachers[i]._id %>" method="post">
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="delete">
		<a href="/teachers/<%= teachers[i]._id %>/edit">edit</a>
	</form>
<% } %>
